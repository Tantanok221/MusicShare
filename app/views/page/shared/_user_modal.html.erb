<div x-show="open" @click.outside="open = false" class="absolute right-6 mt-2 w-56 rounded-md bg-popover text-popover-foreground shadow-md outline outline-1 outline-border">
    <div class="p-2">
        <% if current_user.present? %>
        <div class="px-2 py-1.5">
            <p class="text-sm font-medium">Hello, <%= current_user.username %>!</p>
        </div>
        <div class="my-1 h-px bg-muted"></div>
        <%= link_to profile_path(current_user.username), class: "flex items-center gap-2 rounded-sm px-2 py-1.5 text-sm outline-none transition-colors hover:bg-accent hover:text-accent-foreground" do %>
        <%= phosphor_icon "user", class: "h-4 w-4" %>
        Profile
        <% end %>
        <%= link_to list_index_path, class: "flex items-center gap-2 rounded-sm px-2 py-1.5 text-sm outline-none transition-colors hover:bg-accent hover:text-accent-foreground" do %>
        <%= phosphor_icon "playlist", class: "h-4 w-4" %>
        My Playlists
        <% end %>
        <div class="my-1 h-px bg-muted"></div>
        <%= button_to destroy_user_session_path, method: :delete, class: "flex w-full items-center gap-2 rounded-sm px-2 py-1.5 text-sm outline-none transition-colors hover:bg-accent hover:text-accent-foreground text-red-600" do %>
        <%= phosphor_icon "sign-out", class: "h-4 w-4" %>
        Log Out
        <% end %>
        <% end %>
    </div>
</div>