<div>
  <%= render "page/shared/banner" %>
  <div class="flex flex-col gap-4">
    <h3 class="text-black text-2xl pt-2 font-semibold">
      Recommend Album For You
    </h3>
    <div class="flex flex-row gap-12">
      <% @albums.each do |album| %>
        <%= render(AlbumComponent.new(album: album)) %>
      <% end %>
    </div>
    <%= link_to "./search", class: "flex justify-center items-center gap-2 self-stretch bg-primary font-medium text-white text-sm rounded py-2 my-2" do %>
      Explore More
      <%= phosphor_icon "arrow-right", class: "h-4.5 w-4.5" %>
    <% end %>

  </div>
  <%= render "page/shared/list" %>
</div>