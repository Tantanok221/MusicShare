<div class="space-y-6 max-w-6xl mx-auto">
    <div class="space-y-4">
        <div class="flex items-center justify-between">
            <h1 class="text-3xl font-bold tracking-tight">Edit Song</h1>
            <%= link_to "Back", request.referer, class: "inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium transition-colors rounded-md hover:bg-gray-100" %>
        </div>

        <%= form_with model: @song, url: song_path(@song.id), method: :patch, class: "space-y-4" do |form| %>
        <div class="space-y-2">
            <%= form.label :name, "Name", class: "block text-sm font-medium" %>
            <%= form.text_field :name, class: "w-full px-3 py-2 border rounded-md text-sm", placeholder: "Song Name" %>
        </div>

        <div class="flex gap-2">
            <%= form.submit "Update Song", class: "flex justify-center items-center px-4 py-2 text-sm rounded-md bg-primary text-primary-foreground" %>
            <%= link_to "Cancel", request.referer, class: "flex justify-center items-center px-4 py-2 text-sm rounded-md border hover:bg-gray-50" %>
        </div>
        <% end %>