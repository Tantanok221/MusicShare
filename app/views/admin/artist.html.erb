<div class="min-h-screen bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 py-8">
        <!-- Profile Header -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 mb-8">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">
                        <%= @artist.name %>
                    </h1>
                </div>
                <%= link_to edit_artist_path(@artist.id), class: "inline-flex items-center gap-2 px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 border border-gray-200 rounded-md hover:bg-gray-100 transition-colors ml-6" do %>
                <%= phosphor_icon "pencil", class: "h-4 w-4" %>
                <span>Edit Artist</span>
                <% end %>
            </div>
        </div>

        <!-- Albums Section -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-semibold text-gray-900">Albums</h2>
                <span class="text-sm text-gray-500">
                    <%= @artist.albums.count %> <%= @artist.albums.count == 1 ? 'album' : 'albums' %>
                </span>
            </div>

            <% if @artist.albums.any? %>
            <div class="rounded-lg border bg-white shadow-sm">
                <div class="p-6">
                    <div class="space-y-4">
                        <% @artist.albums.each do |album| %>
                        <div class="flex items-center justify-between py-4 first:pt-0 last:pb-0 border-b last:border-0">
                            <div class="flex items-center gap-4 flex-1">
                                <div class="overflow-hidden rounded-md">
                                    <img src="<%= album.album_image_url %>" alt="<%= album.name %>" class="h-12 w-12 object-cover" />
                                </div>
                                <div class="grid gap-1">
                                    <div class="font-medium leading-none">
                                        <%= link_to album_details_path(album.id), class: "hover:underline" do %>
                                        <%= album.name %>
                                        <% end %>
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        <%= album.genres.map(&:genre_name).join(", ") %>
                                    </div>
                                </div>
                            </div>

                            <div class="flex items-center gap-8 text-sm">
                                <div class="text-gray-500">
                                    <%= album.created_at.strftime("%b %d, %Y") %>
                                </div>
                                <div class="flex items-center gap-1 text-black">
                                    <%= phosphor_icon "star", class: "h-4 w-4" %>
                                    <span class="font-medium"><%= number_with_precision(album.rating || 0, precision: 1) %></span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <%= link_to edit_album_path(album.id), class: "inline-flex items-center justify-center p-1.5 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors" do %>
                                    <%= phosphor_icon "pencil", class: "h-4 w-4" %>
                                    <% end %>
                                    <%= button_to album_path(album.id), method: :delete, 
                                        class: "inline-flex items-center justify-center p-1.5 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors",
                                        data: { confirm: "Are you sure you want to delete this album?" } do %>
                                    <%= phosphor_icon "trash", class: "h-4 w-4" %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <% else %>
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-12 text-center">
                <div class="max-w-sm mx-auto">
                    <%= phosphor_icon "vinyl-record", class: "h-12 w-12 text-gray-300 mx-auto mb-4" %>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No albums yet</h3>
                    <p class="text-sm text-gray-500">
                        This artist hasn't released any albums yet.
                    </p>
                </div>
            </div>
            <% end %>
        </div>

        <!-- Songs Section -->
        <div>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-semibold text-gray-900">Songs</h2>
                <span class="text-sm text-gray-500">
                    <%= @artist.songs.count %> <%= @artist.songs.count == 1 ? 'song' : 'songs' %>
                </span>
            </div>

            <% if @artist.songs.any? %>
            <div class="rounded-lg border bg-white shadow-sm">
                <div class="p-6">
                    <div class="space-y-4">
                        <% @artist.songs.each do |song| %>
                        <div class="flex items-center justify-between py-4 first:pt-0 last:pb-0 border-b last:border-0">
                            <div class="flex items-center gap-4 flex-1">
                                <div class="overflow-hidden rounded-md">
                                    <img src="<%= song.album.album_image_url %>" alt="<%= song.album.name %>" class="h-12 w-12 object-cover" />
                                </div>
                                <div class="grid gap-1">
                                    <div class="font-medium leading-none"><%= song.title %></div>
                                    <div class="text-sm text-gray-500">
                                        from <%= link_to album_details_path(song.album.id), class: "hover:underline" do %>
                                        <%= song.album.name %>
                                        <% end %>
                                    </div>
                                </div>
                            </div>

                            <div class="flex items-center gap-8 text-sm">
                                <div class="text-gray-500">
                                    <%= song.album.created_at.strftime("%b %d, %Y") %>
                                </div>
                                <div class="flex items-center gap-2">
                                    <%= link_to edit_song_path(song.id), class: "inline-flex items-center justify-center p-1.5 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors" do %>
                                    <%= phosphor_icon "pencil", class: "h-4 w-4" %>
                                    <% end %>
                                    <%= button_to song_path(song.id), method: :delete, 
                                        class: "inline-flex items-center justify-center p-1.5 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors",
                                        data: { confirm: "Are you sure you want to delete this song?" } do %>
                                    <%= phosphor_icon "trash", class: "h-4 w-4" %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <% else %>
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-12 text-center">
                <div class="max-w-sm mx-auto">
                    <%= phosphor_icon "music-notes", class: "h-12 w-12 text-gray-300 mx-auto mb-4" %>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No songs yet</h3>
                    <p class="text-sm text-gray-500">
                        This artist hasn't released any songs yet.
                    </p>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>