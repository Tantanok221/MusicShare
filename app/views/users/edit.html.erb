<div class="space-y-6 max-w-6xl mx-auto">
    <div class="space-y-4">
        <div class="flex items-center justify-between">
            <h1 class="text-3xl font-bold tracking-tight">Edit Profile</h1>
            <%= link_to "Back", profile_path(@user.username), class: "inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium transition-colors rounded-md hover:bg-gray-100" %>
        </div>

        <%= form_with model: @user, url: user_path(@user.id), method: :patch, class: "space-y-4" do |form| %>
        <div class="space-y-2">
            <%= form.label :bio, "Bio", class: "block text-sm font-medium" %>
            <%= form.text_area :bio, rows: 6, class: "w-full px-3 py-2 border rounded-md text-sm", placeholder: "Tell us about yourself..." %>
        </div>

        <div class="flex gap-2">
            <%= form.submit "Update Profile", class: "flex justify-center items-center px-4 py-2 text-sm rounded-md bg-primary text-primary-foreground" %>
            <%= link_to "Cancel", profile_path(@user.username), class: "flex justify-center items-center px-4 py-2 text-sm rounded-md border hover:bg-gray-50" %>
        </div>
        <% end %>
    </div>
</div>