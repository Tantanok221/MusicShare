<div class="w-full max-w-md mx-auto p-6">

  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold">Sign Up</h1>
    <p class="text-gray-500 mt-2">Enter your information below to create an account</p>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex gap-4 flex-col" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :username, class: "block text-sm font-medium text-foreground mb-1" %>
      <%= f.text_field :username, class: "w-full px-3 py-2 outline outline-input rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-foreground mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 outline outline-input rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" %>
    </div>


    <div class="field">
      <div class="flex justify-between items-center mb-1">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <div>(<%= @minimum_password_length %> characters minimum)</div>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 outline outline-input rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-foreground mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 outline outline-input rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" %>
    </div>

    <%= render(ButtonComponent.new(attr: { type: "submit", class: "w-full"}, label: "Sign Up")) %>

    <%= render "devise/shared/links" %>
  <% end %>

</div>