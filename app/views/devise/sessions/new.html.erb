<div class="w-full max-w-md mx-auto p-6">

  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold">Login</h1>
    <p class="text-gray-500 mt-2">Enter your email below to login to your account</p>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex gap-4 flex-col" }) do |f| %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-foreground mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 outline outline-input rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" %>
    </div>

    <div>
      <div class="flex justify-between items-center mb-1">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-gray-600 hover:underline" %>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 outline outline-input rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex gap-2 ">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-sm text-foreground" %>
      </div>
    <% end %>

    <%= render(ButtonComponent.new(attr: { type: "submit", class: "w-full" }, label: "Login")) %>
    <%= render "devise/shared/links" %>
  <% end %>

</div>
