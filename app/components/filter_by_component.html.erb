<% case @variant %>
<% when :rating %>
<%= render SelectComponent.new(
  name: :filter_by_rating,
  options: filter_by_rating,
  selected: @selected,
  placeholder: "Filter by rating...",
  label: "Filter by rating"
) %>
<% when :genre %>
<%= render SelectComponent.new(
  name: :filter_by_genre,
  options: filter_by_genre,
  selected: @selected,
  placeholder: "Filter by genre...",
  label: "Filter by genre"
) %>
<% end %>